#include <iostream>
#include <string>
using namespace std;

class Person {
protected:
    string name;
    int age;
    int ID;
    string contact;

public:
    Person() {}

    Person(string name, int age, int id, string c) {
        setn(name);
        seta(age);
        ID = id;
        contact = c;
    }

    ~Person() {}

    void setn(string n) {
        if (!n.empty())
            name = n;
        else
            name = "Unknown";
        }

            void seta(int a) {
                if (a > 0 && a < 130)
                    age = a;
                else
                    age = 18;
            }
        
            void setID(int id) { 
                ID = id; 
            }
        
            void setC(string c) {
                 contact = c; 
                }
        
            string getn() {
                return name; 
               }
           int geta() {
                return age; 
               }
           int getID() {
                return ID;
                }
           string getC() {
                return contact;
                }
       };
       
       class Student : public Person {
           private:
               string enrollment_date;
               string program;
               float GPA;
           
           public:
               Student() {}
               Student(string name, int age, int id, string c, string ed, string p, float gpa): Person(name, age, id, c) {
                enrollment_date = ed;
                program = p;
                setGPA(gpa);
            }
        
            ~Student() {}
        
            void setEnrollmentDate(string ed) { enrollment_date = ed; }
           
            void setProgram(string p) { program = p; }
        
            void setGPA(float gpa) {
                if (gpa >= 0.0 && gpa <= 4.0)
                    GPA = gpa;
                else
                    GPA = 0.0;
            }
        
            string getEnrollmentDate() { 
                return enrollment_date;
            }
            string getProgram() { 
                return program;
            }
            float getGPA() {
                return GPA; 
            }void display() {
                cout << "Student: " << getn() << ", Age: " << geta()
                     << "ID: " << getID() << ", Contact: " << getC()
                     << "Enrollment Date: " << enrollment_date
                     << "Program: " << program << ", GPA: " << GPA << endl;
            }
        };
        class Professor : public Person {
            private:
                string department;
                string specialization;
                string hireDate;
            
            public:
                Professor() {}
            
                Professor(string name, int age, int id, string contact,string d, string s, string hd): Person(name, age, id, contact) {
                    department = d;
                    specialization = s;
                    hireDate = hd;
                }
            
                ~Professor() {}
            
                void setDept(string dep){
                     department = dep; 
                    }void setSpec(string s) { 
                        specialization = s; 
                    }
                    void sethd(string h) { 
                        hireDate = h; 
                    }
                
                    string getDepartment() { 
                        return department; 
                    }
                    string getSpecialization() { 
                        return specialization; 
                    }
                    string getHireDate() { 
                        return hireDate;
                     }
                
                    void display() {
                        cout << "Professor: " << getn() << ", Age: " << geta()
                             << "ID: " << getID() << ", Contact: " << getC()
                             << "Department: " << department
                             << "Specialization: " << specialization
                             << "Hire Date: " << hireDate << endl;
                    }
                };
                class Course {
                    private:string code;
                    string title;
                    int credit;
                    string description;
                
                public:
                    Course() {}
                
                    Course(string c, string t, int cd, string des) {
                        code = c;
                        title = t;
                        setCredit(cd);
                        description = des;
                    }
                
                    ~Course() {}
                
                    void setCode(string c) { 
                        code = c; 
                    }
                    void setTitle(string t) { 
                        title = t; 
                    }
                    void setCredit(int cd) {
                        if (cd > 0)
                            credit = cd;
                        else credit = 1;
                    }
                    void setDesc(string d) { 
                        description = d;
                    }
                
                    string getCode() {
                         return code;
                    }
                    string getTitle() { 
                        return title; 
                    }
                    int getCredit() {
                         return credit; 
                    }
                    string getDescription() {
                         return description; 
                    }
                
                    void display() {
                        cout << "Course: " << code << " - " << title
                             << "Credits: " << credit
                             << "Description: " << description << endl;
                    }
                };
                class Department {private:
                    string name;
                    string location;
                    float budget;
                
                public:
                    Department() {}
                
                    Department(string nm, string loc, float budg) {
                        name = nm;
                        location = loc;
                        setBudg(budg);
                    }
                
                    ~Department() {}
                
                    void setN(string n) { 
                        name = n; }
                    void setLoc(string l) 
                    { 
                        location = l; 
                    }
                    void setBudg(float b) {
                        if (b >= 0)
                            budget = b;
                        else
                            budget = 0;
                    }string getN() { 
                        return name;
                     }
                    string getLoc() { 
                        return location; 
                    }
                    float getBudg() { 
                        return budget;
                    }
                
                    void display() {
                        cout << "Department: " << name
                             << ", Location: " << location
                             << ", Budget: $" << budget << endl;
                    }
                };
                int main() {
                   
                    Student s1("Ali", 140, 1, "9837373887", "2025-08-05", "BTECH", 4.1);
                    Student s2("Sara", 21, 2, "8799776789", "2025-03-04", "BBA", 3.2);
                
                    Professor p1("Dr. riya", 45, 201, "8768678768", "CS", "AI", "2025-08-15");
                    Professor p2("Dr. Sia", 50, 202, "6876876786", "Btaech","cse" ,"2025-09-01");
                
          
                    Course c1("CS101", "C Programming", 3, "Learn basics of C++");
                    Course c2("MKT201", "Python Programming", 2, "python");Department d1("Computer Science", "Block 1", 100000.0);
                    Department d2("CS Administration", "Block 2", 900000.0);
                
          
                    s1.display();
                    s2.display();
                    cout << endl;
                
                    p1.display();
                    p2.display();
                    cout << endl;
                
                    c1.display();
                    c2.display();
                    cout << endl;
                
                    d1.display();
                    d2.display();
                
                    return 0;
                }
                                                    
           
